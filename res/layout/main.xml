<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:gravity="center"
>
    <LinearLayout
            android:gravity="right"
            android:layout_width="fill_parent" android:layout_height="wrap_content">
        <Button
                android:text="跳过" android:id="@+id/btn_skip"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tv_count" android:text="10" android:textSize="20dp"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView
                android:text="账    号：" android:textSize="25dp"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <EditText android:id="@+id/et_id"
                  android:minWidth="150dp" android:background="#ffffff" android:textColor="#001111"
                  android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView
                android:text="用户名：" android:textSize="25dp"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <EditText android:id="@+id/et_name"
                  android:minWidth="150dp" android:background="#ffffff" android:textColor="#001111"
                  android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView
                android:text="密    码：" android:textSize="25dp"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <EditText android:id="@+id/et_pwd"
                  android:minWidth="150dp" android:background="#ffffff" android:textColor="#001111"
                  android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button android:id="@+id/btn_reg"
                android:text="注册"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <Button android:id="@+id/btn_search"
                android:text="查询"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <Button android:id="@+id/btn_modify"
                android:text="修改"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <Button android:id="@+id/btn_delete"
                android:text="删除"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button android:id="@+id/btn_searchLike"
                android:text="模糊查询"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <Button android:id="@+id/btn_searchAll"
                android:text="查询所有"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>

