<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
            android:layout_marginBottom="10px"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:layout_weight="1"
                  android:text="账号：" android:gravity="right"
                  android:layout_width="0" android:layout_height="wrap_content"/>
        <EditText android:background="#fff" android:textColor="#000"
                  android:id="@+id/et_reg_id" android:layout_weight="2"
                  android:gravity="left"
                  android:layout_width="100dp" android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
            android:layout_marginBottom="10px"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:layout_weight="1"
                  android:text="用户名：" android:gravity="right"
                  android:layout_width="0" android:layout_height="wrap_content"/>
        <EditText android:background="#fff" android:textColor="#000"
                  android:id="@+id/et_reg_name" android:layout_weight="2"
                  android:gravity="left"
                  android:layout_width="100dp" android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
            android:layout_marginBottom="10px"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:layout_weight="1"
                  android:text="用户角色：" android:gravity="right"
                  android:layout_width="0" android:layout_height="wrap_content"/>
        <EditText android:background="#fff" android:textColor="#000"
                  android:id="@+id/et_reg_role" android:layout_weight="2"
                  android:gravity="left"
                  android:layout_width="100dp" android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
            android:layout_marginBottom="10px"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:layout_weight="1"
                  android:text="密码：" android:gravity="right"
                  android:layout_width="0" android:layout_height="wrap_content"/>
        <EditText android:background="#fff" android:textColor="#000"
                  android:id="@+id/et_reg_pwd" android:layout_weight="2"
                  android:gravity="left"
                  android:layout_width="100dp" android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
            android:layout_marginBottom="10px"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:layout_weight="1"
                  android:text="确认密码：" android:gravity="right"
                  android:layout_width="0" android:layout_height="wrap_content"/>
        <EditText android:background="#fff" android:textColor="#000"
                  android:id="@+id/et_reg_cpwd" android:layout_weight="2"
                  android:gravity="left"
                  android:layout_width="100dp" android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
            android:layout_marginBottom="10px"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button
                android:id="@+id/btn_reg_save" android:text="保存"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <Button
                android:id="@+id/btn_reg_reset" android:text="重置"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>