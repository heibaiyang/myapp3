<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:gravity="center"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
            android:layout_marginBottom="10px"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent" android:layout_height="45px">
        <TextView android:id="@+id/tv_login_id"
                android:text="账号："
                android:layout_width="100px" android:layout_height="45px"/>
        <EditText android:background="#fff" android:textColor="#000"
                android:id="@+id/et_login_id"
                android:layout_width="300px" android:layout_height="45px"/>
    </LinearLayout>
    <LinearLayout
            android:layout_marginBottom="10px"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent" android:layout_height="45px">
        <TextView android:id="@+id/tv_login_pwd"
                  android:text="密码："
                  android:layout_width="100px" android:layout_height="45px"/>
        <EditText android:background="#fff" android:textColor="#000"
                android:id="@+id/et_login_pwd"
                android:layout_width="300px" android:layout_height="45px"/>
    </LinearLayout>
    <LinearLayout
            android:layout_marginBottom="10px"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent" android:layout_height="85px">
        <Button
                android:id="@+id/btn_login" android:text="登录"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <Button
                android:id="@+id/btn_register" android:text="注册"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>